<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit">

    <Button
        android:id="@+id/choose_from_album_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="修改头像"
        app:layout_constraintStart_toStartOf="@+id/imageView_edit"
        app:layout_constraintTop_toBottomOf="@+id/imageView_edit" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_edit"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_from_album_edit">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:hint="请输入昵称" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView_edit"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="113dp"
        android:layout_marginLeft="113dp"
        android:layout_marginRight="113dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/edit_navigation_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:text="删除角色"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="92dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="92dp"
        android:layout_marginStart="91dp"
        android:text="确认修改"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView" />


</android.support.constraint.ConstraintLayout>